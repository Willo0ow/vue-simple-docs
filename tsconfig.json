{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./dist",
      "allowJs": true,
      "checkJs": true,
      "declaration": true,
      "declarationMap": false,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "lib": ["ES2020", "dom"]
    },
    "include": ["lib/**/*.ts", "lib/**/*.js"]
  }
  