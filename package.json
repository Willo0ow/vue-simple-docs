{
  "name": "vue-simple-docs",
  "version": "1.0.0",
  "description": "Create your project's documentation in few simple steps.",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir -p dist",
    "build": "npm run clean && tsup --minify --format cjs,esm",
    "dev": "tsup --minify --format cjs,esm --watch",
    "clean:generated": "node ./dist/deleteGeneratedData.js",
    "generate:data": "npm run clean:generated && node ./dist/generateData.js",
    "generate:docsApp": "node ./dist/index.js && npm run generate:data && cd docs && npm install"
  },
  "keywords": [
    "vue",
    "documentation",
    "docs",
    "generate"
  ],
  "author": "Willo0ow",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/cjs/types/index.d.ts",
  "files": [
    "dist",
    "lib",
    "template",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.7.2",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.1",
    "fs-extra": "^11.1.1",
    "prettier": "^2.8.4"
  }
}
