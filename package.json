{
  "name": "vue-simple-docs",
  "version": "1.0.0",
  "description": "Create your project's documentation in few simple steps.",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir -p dist",
    "build": "npm run clean && tsup --minify --format cjs,esm",
    "dev": "tsup --minify --format cjs,esm --watch",
    "clean:generated": "node ./dist/deleteGeneratedData.js",
    "generate:data": "npm run clean:generated && node ./dist/generateData.js && prettier --write template/src/generated",
    "generate:docsApp": "node ./dist/index.js && npm run generate:data && cd docs && npm install"
  },
  "keywords": [
    "vue",
    "documentation",
    "docs",
    "generate"
  ],
  "author": "Willo0ow",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.15.11",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "types": "./dist/cjs/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "files": [
    "lib/**/*",
    "index.ts"
  ],
  "dependencies": {
    "@types/fs-extra": "^11.0.1",
    "fs-extra": "^11.1.1",
    "prettier": "^2.8.4"
  }
}
